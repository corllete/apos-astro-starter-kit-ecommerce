---
import apos from "@utils/apos";

const { __t } = apos;
const { id, className, items, hidden } = Astro.props;
---

<nav
  {id}
  class:list={["flex items-center justify-center flex-grow h-full", className]}
  aria-label={__t("mainMenu")}
  aria-hidden={hidden ? "true" : "false"}
>
  <ul
    class="h-full flex flex-col gap-4 lg:gap-0 lg:flex-row items-center justify-center"
  >
    {
      items.map((nav, index) => {
        const state = nav.active
          ? ""
          : " after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:ease-in after:duration-100";
        return (
          <li class="h-full">
            <a
              class:list={[
                "relative inline-flex items-center justify-center px-5 py-4 lg:py-0 h-full font-semibold text-gray-600 after:block after:absolute after:bottom-[-1px] after:left-0 after:h-1 after:w-full after:bg-brand-300",
                state,
              ]}
              href={nav.url}
            >
              {nav.label}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
